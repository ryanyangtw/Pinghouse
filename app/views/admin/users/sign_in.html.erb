<h2>網站管理者登入</h2>
<hr/>




<%= simple_form_for :user, :url=>admin_path, :method => :post do |f|%>
    
    <%= f.input :username, :input_html=>{:class =>"form-control"}, :wrapper_html=>{:class=>"form-group"}, :label=>"帳號"%>

    <%= f.input :password, :input_html=>{:class =>"form-control"}, :wrapper_html=>{:class=>"form-group"}, :label=>"密碼"%>


<hr/>

  <div class="form-group">
    <%= f.submit '登入' ,class: "btn btn-info btn-lg" %>
  </div>
<% end %>




